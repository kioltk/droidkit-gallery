<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MyActivity$PlaceholderFragment">

        <Button
            android:id="@+id/gallery_button"
            android:text="galery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/full_gallery_button"
            android:text="picture pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.droidkit.gallery.util.view.MaterialCheckBox
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/picker_picture_selected"
        app:lineColor="#fff"
        app:lineWidth="2dp"
        android:layout_margin="10dp"
        android:layout_width="46dp"
        android:layout_height="46dp" />
</LinearLayout>
