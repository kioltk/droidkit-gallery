<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidkit.gallery" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true" >
        <activity
            android:name="com.droidkit.gallery.GalleryActivity"
            android:label="@string/example_title_activity_test"
            android:theme="@style/PickerTheme.PicturePicker" >
        </activity>
        <activity
            android:name="com.droidkit.gallery.ImageViewerActivity"
            android:label="@string/title_activity_fullscreen" >
        </activity>
        <activity
            android:name="com.droidkit.gallery.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
