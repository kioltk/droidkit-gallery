<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidkit.gallery" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name="com.droidkit.AppContext"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="droidkit-gallery">
        <activity
            android:name=".picker.GalleryPickerActivity"
            android:label="@string/example_title_activity_test"
            android:theme="@style/PickerTheme.PicturePicker" >
        </activity>
        <activity
            android:name=".viewer.GalleryViewerActivity"
            android:label="@string/title_viewer" >
        </activity>
        <activity
            android:name=".viewer.PictureViewerActivity"
            android:theme="@style/PickerTheme.Fullscreen"
            >
        </activity>
    </application>

</manifest>
